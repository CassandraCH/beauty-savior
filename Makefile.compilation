#
# Option compilation 
#

CCOBJ=gcc -c
CC=gcc 


# Valeurs possibles : yes , no  
DEBUG=no
# Valeurs possibles : win , linux 
ARCH=win

ifeq ($(ARCH),win)
	 CFLAGS= -I includes -Wfatal-errors -O 
     LDFLAGS= -lmingw32 -lSDL2main -lSDL2_image -lSDL2_ttf -lSDL2_mixer -lSDL2 
	 EXEC= bin/win_progee
endif

ifeq ($(ARCH),linux)
	CFLAGS= -I includes -Wfatal-errors
	LDFLAGS= -lm -lSDL2main -lSDL2_image -lSDL2_ttf -lSDL2_mixer -lSDL2 
	EXEC= bin\linux_prog
endif

